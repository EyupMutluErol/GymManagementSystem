@model List<GymManagementSystem.WebUI.Models.ViewModels.AppointmentListViewModel>

@{
    ViewData["Title"] = "Eğitmen Paneli";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-info"><i class="fa-solid fa-chalkboard-user"></i> Eğitmen Paneli</h2>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info m-3 text-center">
            Henüz planlanmış bir dersiniz bulunmamaktadır.
        </div>
    }
    else
    {
        @foreach (var group in Model.GroupBy(x => x.Date.Date))
        {
            <div class="card shadow mb-4">
                <div class="card-header bg-light text-dark border-start border-5 border-info">
                    <h5 class="mb-0 fw-bold">
                        <i class="fa-solid fa-calendar-day text-info me-2"></i>
                        @group.Key.ToString("dd MMMM yyyy - dddd")
                    </h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="bg-white text-secondary small">
                            <tr>
                                <th style="width: 150px;">Saat</th>
                                <th>Öğrenci</th>
                                <th>Ders</th>
                                <th class="text-end">Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in group)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-outline-dark text-dark border">
                                            <i class="fa-regular fa-clock"></i> @item.StartTime - @item.EndTime
                                        </span>
                                    </td>
                                    <td class="fw-bold">@item.TrainerName</td>
                                    <td>@item.ServiceName</td>
                                    <td class="text-end">
                                        <span class="badge bg-@item.StatusColor">@item.Status</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
</div>