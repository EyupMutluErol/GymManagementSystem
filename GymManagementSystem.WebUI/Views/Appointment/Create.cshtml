@model GymManagementSystem.WebUI.Models.ViewModels.MakeAppointmentViewModel

@{
    ViewData["Title"] = "Randevu Al";
    Layout = "_Layout";
}

<style>
    .appointment-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        color: white;
        padding: 25px;
        text-align: center;
    }

    .step-number {
        display: inline-block;
        width: 28px;
        height: 28px;
        background-color: #e9ecef;
        color: #0d6efd;
        border-radius: 50%;
        text-align: center;
        line-height: 28px;
        font-weight: bold;
        font-size: 0.9rem;
        margin-right: 10px;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        font-size: 1rem;
    }

    .form-select, .form-control {
        border-radius: 10px;
        padding: 12px;
        border: 1px solid #ced4da;
        font-size: 1rem;
        background-color: #f8f9fa;
    }

        .form-select:focus, .form-control:focus {
            background-color: #fff;
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

    .input-group-text {
        border-radius: 10px 0 0 10px;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-right: none;
        color: #0d6efd;
    }
    .input-group > .form-select, .input-group > .form-control {
        border-radius: 0 10px 10px 0;
        border-left: none;
    }

    .time-slot-btn {
        border-radius: 50px;
        padding: 8px 20px;
        font-weight: 500;
        margin: 5px;
        transition: all 0.2s;
    }

    #timeSlotsContainer {
        min-height: 80px;
        background-color: #f8f9fa;
        border-radius: 12px;
        border: 2px dashed #dee2e6;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        padding: 15px;
    }

    .btn-submit {
        border-radius: 50px;
        padding: 15px;
        font-size: 1.1rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        width: 100%;
        box-shadow: 0 4px 15px rgba(25, 135, 84, 0.3);
    }

        .btn-submit:hover:not(.disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(25, 135, 84, 0.4);
        }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card appointment-card">

                <div class="card-header-custom">
                    <i class="fa-solid fa-calendar-check fa-3x mb-3"></i>
                    <h3 class="fw-bold m-0">Randevu Oluştur</h3>
                    <p class="mb-0 opacity-75">Adımları takip ederek randevunuzu planlayın</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">

                        <!-- 1. ADIM: SALON -->
                        <div class="mb-4">
                            <label asp-for="GymId" class="form-label">
                                <span class="step-number">1</span> Salon Seçimi
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-building"></i></span>
                                <select asp-for="GymId" class="form-select" asp-items="ViewBag.Gyms" id="gymDropdown">
                                    <option value=""> Lütfen Salon Seçiniz </option>
                                </select>
                            </div>
                            <span asp-validation-for="GymId" class="text-danger small ms-2"></span>
                        </div>

                        <!-- 2. ADIM: HİZMET -->
                        <div class="mb-4">
                            <label asp-for="ServiceId" class="form-label">
                                <span class="step-number">2</span> Hizmet Seçimi
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-dumbbell"></i></span>
                                <select asp-for="ServiceId" class="form-select" id="serviceDropdown" disabled>
                                    <option value=""> Önce Salon Seçiniz </option>
                                </select>
                            </div>
                            <span asp-validation-for="ServiceId" class="text-danger small ms-2"></span>
                        </div>

                        <!-- 3. ADIM: ANTRENÖR -->
                        <div class="mb-4">
                            <label asp-for="TrainerId" class="form-label">
                                <span class="step-number">3</span> Eğitmen Tercihi
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-user-tie"></i></span>
                                <select asp-for="TrainerId" class="form-select" id="trainerDropdown" disabled>
                                    <option value=""> Önce Hizmet Seçiniz </option>
                                </select>
                            </div>
                            <span asp-validation-for="TrainerId" class="text-danger small ms-2"></span>
                        </div>

                        <!-- 4. ADIM: TARİH -->
                        <div class="mb-4">
                            <label asp-for="Date" class="form-label">
                                <span class="step-number">4</span> Tarih Belirleyin
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-calendar-day"></i></span>
                                <input asp-for="Date" type="date" class="form-control" id="appointmentDate" />
                            </div>
                            <span asp-validation-for="Date" class="text-danger small ms-2"></span>
                        </div>

                        <!-- 5. ADIM: SAAT -->
                        <div class="mb-4">
                            <label class="form-label">
                                <span class="step-number">5</span> Uygun Saatler
                            </label>
                            <div id="timeSlotsContainer">
                                <div class="text-muted small fst-italic text-center">
                                    <i class="fa-solid fa-clock"></i><br>
                                    Lütfen önce eğitmen ve tarih seçiniz.
                                </div>
                            </div>
                            <span asp-validation-for="TimeSlot" class="text-danger small ms-2"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-submit disabled" id="btnSubmit">
                                Randevuyu Onayla <i class="fa-solid fa-check ms-2"></i>
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // 1. Salon Değişince
            $('#gymDropdown').change(function () {
                var gymId = $(this).val();
                var serviceDropdown = $('#serviceDropdown');

                serviceDropdown.empty().append('<option value=""> Hizmet Seçiniz </option>').prop('disabled', true);
                $('#trainerDropdown').empty().append('<option value=""> Önce Hizmet </option>').prop('disabled', true);
                $('#timeSlotsContainer').html('<div class="text-muted small fst-italic text-center"><i class="fa-solid fa-clock"></i><br>Lütfen önce eğitmen ve tarih seçiniz.</div>');

                if (gymId) {
                    $.getJSON('/Appointment/GetServicesByGym', { gymId: gymId }, function (data) {
                        $.each(data, function (i, item) {
                            serviceDropdown.append($('<option>').val(item.id).text(item.name));
                        });
                        serviceDropdown.prop('disabled', false);
                    });
                }
            });

            // 2. Hizmet Değişince
            $('#serviceDropdown').change(function () {
                var serviceId = $(this).val();
                var trainerDropdown = $('#trainerDropdown');

                trainerDropdown.empty().append('<option value="">-- Antrenör Seçiniz --</option>').prop('disabled', true);

                if (serviceId) {
                    $.getJSON('/Appointment/GetTrainersByService', { serviceId: serviceId }, function (data) {
                        $.each(data, function (i, item) {
                            trainerDropdown.append($('<option>').val(item.id).text(item.fullName));
                        });
                        trainerDropdown.prop('disabled', false);
                    });
                }
            });

            // 3. Tarih veya Antrenör Değişince
            $('#appointmentDate, #trainerDropdown').change(function () {
                var trainerId = $('#trainerDropdown').val();
                var serviceId = $('#serviceDropdown').val();
                var date = $('#appointmentDate').val();
                var container = $('#timeSlotsContainer');

                if (trainerId && serviceId && date) {
                    container.html('<div class="spinner-border text-primary" role="status"><span class="visually-hidden">Yükleniyor...</span></div>');

                    $.getJSON('/Appointment/GetAvailableHours', { trainerId: trainerId, serviceId: serviceId, date: date }, function (data) {
                        container.empty();
                        if (data.length === 0) {
                            container.html('<div class="alert alert-warning w-100 border-0 bg-warning bg-opacity-10 text-warning text-center small mb-0"><i class="fa-solid fa-triangle-exclamation mb-1"></i><br>Bu tarihte uygun saat bulunamadı.</div>');
                        } else {
                            $.each(data, function (i, time) {
                                var btn = `
                                    <input type="radio" class="btn-check" name="TimeSlot" id="slot_${i}" value="${time}" required>
                                    <label class="btn btn-outline-primary time-slot-btn" for="slot_${i}">${time}</label>
                                `;
                                container.append(btn);
                            });

                            $('input[name="TimeSlot"]').change(function() {
                                $('#btnSubmit').removeClass('disabled');
                            });
                        }
                    });
                }
            });
        });
    </script>
}