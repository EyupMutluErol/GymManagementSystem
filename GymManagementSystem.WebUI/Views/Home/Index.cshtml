@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold text-primary">Gym Yönetim Sistemine Hoşgeldiniz</h1>
    <p class="lead">Spor salonu randevularınızı kolayca yönetin, programınızı takip edin.</p>

    @if (!User.Identity.IsAuthenticated)
    {
        <hr class="my-4">
        <p>Hemen başlamak için giriş yapın veya kayıt olun.</p>
        <a class="btn btn-primary btn-lg" href="/Account/Login" role="button">Giriş Yap</a>
        <a class="btn btn-secondary btn-lg" href="/Account/Register" role="button">Kayıt Ol</a>
    }
    else
    {
        <div class="alert alert-success mt-4">
            <i class="fa-solid fa-check-circle"></i> Şu an oturum açmış durumdasınız.
        </div>
    }
</div>