@model List<GymManagementSystem.WebUI.Models.ViewModels.UserListViewModel>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fa-solid fa-users-gear"></i> Kullanıcı Yönetimi</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>E-Posta</th>
                        <th>Mevcut Rol</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.Email</td>
                            <td>
                                @if (item.RoleName == "Trainer")
                                {
                                    <span class="badge bg-success">Eğitmen</span>
                                }
                                else if (item.RoleName == "Member")
                                {
                                    <span class="badge bg-secondary">Üye</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@item.RoleName</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
                                        Rol Değiştir
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="fa-solid fa-user"></i> Üye Yap
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="fa-solid fa-chalkboard-user"></i> Eğitmen Yap
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <a href="#" class="btn btn-sm btn-danger ms-1">
                                    <i class="fa-solid fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>