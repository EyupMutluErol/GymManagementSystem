@model List<GymManagementSystem.WebUI.Models.ViewModels.UserListViewModel>

@{
    ViewData["Title"] = "Eğitmen Listesi";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-success"><i class="fa-solid fa-chalkboard-user"></i> Eğitmen Listesi</h2>
        <div>
            <a asp-action="AddTrainer" class="btn btn-success me-2">
                <i class="fa-solid fa-plus"></i> Yeni Ata
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Geri Dön
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>E-Posta</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.Email</td>
                            <td><span class="badge bg-success">Eğitmen</span></td>
                            <td class="text-end">
                                <!-- Eğitmeni Üye Yap (Yetkisini Al) Butonu -->
                                <form asp-action="ChangeRole" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="hidden" name="role" value="Member" />
                                    <button type="submit" class="btn btn-sm btn-outline-warning" onclick="return confirm('Bu kişinin eğitmen yetkisini alıp Normal Üye yapmak istediğinize emin misiniz?');">
                                        <i class="fa-solid fa-user-minus"></i> Yetkiyi Al
                                    </button>
                                </form>

                                <a asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                    <i class="fa-solid fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (Model.Count == 0)
            {
                <div class="alert alert-warning m-3 text-center">Kayıtlı eğitmen bulunmamaktadır.</div>
            }
        </div>
    </div>
</div>