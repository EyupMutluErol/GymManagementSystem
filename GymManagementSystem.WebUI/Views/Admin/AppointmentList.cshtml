@model List<GymManagementSystem.WebUI.Models.ViewModels.AppointmentListViewModel>

@{
    ViewData["Title"] = "Randevu Yönetimi";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fa-solid fa-calendar-check"></i> Randevu Yönetimi</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Geri Dön
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Üye</th>
                        <th>Eğitmen / Hizmet</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Date.ToString("dd.MM.yyyy")</strong></td>
                            <td>@item.StartTime - @item.EndTime</td>
                            <td>
                                <i class="fa-solid fa-user text-muted"></i> @item.MemberName
                            </td>
                            <td>
                                <div><small class="text-muted">Hoca:</small> @item.TrainerName</div>
                                <div><small class="text-muted">Ders:</small> @item.ServiceName</div>
                            </td>
                            <td>
                                <span class="badge bg-@item.StatusColor">@item.Status</span>
                            </td>
                            <td class="text-end">
                                @if (item.Status == "Onay Bekliyor")
                                {
                                    <a asp-action="ApproveAppointment" asp-route-id="@item.Id" class="btn btn-sm btn-success" title="Onayla">
                                        <i class="fa-solid fa-check"></i>
                                    </a>
                                    <a asp-action="RejectAppointment" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-danger ms-1"
                                       title="Reddet"
                                       onclick="return confirm('Bu randevuyu reddetmek istediğinize emin misiniz?');">
                                        <i class="fa-solid fa-xmark"></i>
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted small"><i class="fa-solid fa-lock"></i> İşlem Yapıldı</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.Count == 0)
            {
                <div class="alert alert-warning m-3 text-center">Henüz kayıtlı bir randevu bulunmamaktadır.</div>
            }
        </div>
    </div>
</div>