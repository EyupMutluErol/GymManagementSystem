@model List<GymManagementSystem.WebUI.Models.ViewModels.GymViewModel>

@{
    ViewData["Title"] = "Salon Listesi";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fa-solid fa-building"></i> Salon Yönetimi</h2>
        <a asp-action="AddGym" class="btn btn-success">
            <i class="fa-solid fa-plus"></i> Yeni Salon Ekle
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Salon Adı</th>
                        <th>Adres</th>
                        <th>Çalışma Saatleri</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Name</td>
                            <td>@item.Address</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @item.OpenTime.ToString(@"hh\:mm") - @item.CloseTime.ToString(@"hh\:mm")
                                </span>
                            </td>
                            <td class="text-end">
                                <a href="#" class="btn btn-sm btn-warning">
                                    <i class="fa-solid fa-pen"></i> Düzenle
                                </a>
                                <a href="#" class="btn btn-sm btn-danger ms-1">
                                    <i class="fa-solid fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.Count == 0)
            {
                <div class="alert alert-warning m-3 text-center">
                    Henüz kayıtlı bir spor salonu bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>