@model GymManagementSystem.Business.Dtos.TrainerDetailDto

@{
    ViewData["Title"] = "Antrenör Düzenle";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="fa-solid fa-user-pen"></i> Antrenör Düzenle: @Model.FirstName @Model.LastName</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditTrainer" method="post">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="FirstName" />
                <input type="hidden" asp-for="LastName" />
                <input type="hidden" asp-for="Email" />

                <!-- 1. SALON SEÇİMİ -->
                <div class="mb-4">
                    <label class="form-label fw-bold">Çalıştığı Salon</label>
                    <select asp-for="GymId" class="form-select" asp-items="ViewBag.Gyms">
                        <option value="">-- Bir Salon Atayın --</option>
                    </select>
                    <div class="form-text text-muted">Hocanın verebileceği dersleri görmek için önce bir salon seçip <strong>Kaydet</strong> butonuna basınız.</div>
                </div>

                <!-- 2. HİZMET (UZMANLIK) SEÇİMİ -->
                @if (Model.GymId != null && Model.ServiceList.Count > 0)
                {
                    <h5 class="border-bottom pb-2 mb-3">Verebileceği Hizmetler</h5>
                    <div class="row">
                        @for (int i = 0; i < Model.ServiceList.Count; i++)
                        {
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model.ServiceList[i].ServiceId" />
                                    <input type="hidden" asp-for="@Model.ServiceList[i].ServiceName" />

                                    <input class="form-check-input" type="checkbox" asp-for="@Model.ServiceList[i].IsSelected" />
                                    <label class="form-check-label">
                                        @Model.ServiceList[i].ServiceName
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                }
                else if (Model.GymId != null)
                {
                    <div class="alert alert-warning">Bu salonda henüz tanımlı bir hizmet yok.</div>
                }

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="TrainerList" class="btn btn-secondary me-2">İptal</a>
                    <button type="submit" class="btn btn-success px-4">Değişiklikleri Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>