@model GymManagementSystem.WebUI.Models.ViewModels.AIRequestViewModel

@{
    ViewData["Title"] = "AI Antrenör";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">
            <i class="fa-solid fa-robot"></i> AI Akıllı Antrenör
        </h1>
        <p class="lead text-muted">Vücut bilgilerinizi girin, yapay zeka size özel programı saniyeler içinde hazırlasın.</p>
    </div>

    <div class="row">
        <!-- SOL TARAF: FORM -->
        <div class="col-md-4">
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-user-gear"></i> Bilgilerinizi Girin</h5>
                </div>
                <div class="card-body">
                    <form asp-action="GeneratePlan" method="post">

                        <div class="row mb-2">
                            <div class="col">
                                <label class="form-label">Yaş</label>
                                <input asp-for="Age" class="form-control" type="number" />
                            </div>
                            <div class="col">
                                <label class="form-label">Cinsiyet</label>
                                <select asp-for="Gender" class="form-select">
                                    <option>Erkek</option>
                                    <option>Kadın</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col">
                                <label class="form-label">Boy (cm)</label>
                                <input asp-for="Height" class="form-control" type="number" />
                            </div>
                            <div class="col">
                                <label class="form-label">Kilo (kg)</label>
                                <input asp-for="Weight" class="form-control" type="number" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hedefiniz</label>
                            <select asp-for="Goal" class="form-select">
                                <option>Kilo Vermek & Yağ Yakmak</option>
                                <option>Kas Kütlesini Artırmak</option>
                                <option>Formu Korumak & Sıkılaşmak</option>
                                <option>Güç ve Kondisyon Artırmak</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Aktivite Düzeyi</label>
                            <select asp-for="ActivityLevel" class="form-select">
                                <option>Hareketsiz (Masa başı iş)</option>
                                <option>Az Hareketli (Haftada 1-2 spor)</option>
                                <option>Orta Hareketli (Haftada 3-4 spor)</option>
                                <option>Çok Hareketli (Haftada 5+ spor)</option>
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" id="btnGenerate">
                                <i class="fa-solid fa-wand-magic-sparkles"></i> Programı Hazırla
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- SAĞ TARAF: SONUÇ ALANI -->
        <div class="col-md-8">
            <div class="card shadow border-0 h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-file-prescription"></i> Size Özel Program</h5>
                </div>
                <div class="card-body bg-light" id="resultArea">
                    @if (!string.IsNullOrEmpty(Model.AIResponse))
                    {
                        <!-- AI'dan gelen HTML cevabı buraya basılır -->
                        <div class="p-3 bg-white rounded shadow-sm border">
                            @Html.Raw(Model.AIResponse.Replace("```html", "").Replace("```", ""))
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted opacity-50">
                            <i class="fa-solid fa-dumbbell fa-5x mb-3"></i>
                            <h4>Henüz bir program oluşturulmadı.</h4>
                            <p>Lütfen bilgilerinizi girip butona tıklayın.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Yükleniyor Animasyonu İçin Script -->
<script>
    document.querySelector('form').addEventListener('submit', function() {
        var btn = document.getElementById('btnGenerate');
        var resultArea = document.getElementById('resultArea');

        btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Yapay Zeka Düşünüyor...';
        btn.disabled = true;

        resultArea.innerHTML = `
            <div class="text-center py-5">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status"></div>
                <h4 class="mt-3 text-primary">Analiz Yapılıyor...</h4>
                <p class="text-muted">Bu işlem birkaç saniye sürebilir.</p>
            </div>
        `;
    });
</script>