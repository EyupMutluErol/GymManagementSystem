@using Microsoft.AspNetCore.Identity
@inject SignInManager<GymManagementSystem.Entities.Concrete.AppUser> SignInManager
@inject UserManager<GymManagementSystem.Entities.Concrete.AppUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gym Yönetim Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-dumbbell text-warning"></i> GymApp
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Hakkımızda</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning fw-bold" asp-controller="Admin" asp-action="Index">
                                        <i class="fa-solid fa-gauge"></i> Panel
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Trainer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-info" asp-controller="Trainer" asp-action="Index">
                                        <i class="fa-solid fa-calendar-check"></i> Ders Programım
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Member"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Appointment" asp-action="Create">
                                        <i class="fa-solid fa-calendar-plus"></i> Randevu Al
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Appointment" asp-action="MyAppointments">
                                        <i class="fa-solid fa-calendar-check"></i> Randevularım
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="AI" asp-action="Index">
                                        <i class="fa-solid fa-robot text-warning"></i> AI Antrenör
                                    </a>
                                </li>
                            }
                        }
                        
                    </ul>

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var user = await UserManager.GetUserAsync(User);
                            var displayName = user != null ? user.FirstName : User.Identity.Name;

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fa-solid fa-circle-user fa-2x me-2"></i>
                                    <span class="fw-bold">@displayName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fa-solid fa-user-gear"></i> Profil Ayarları
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                            <i class="fa-solid fa-right-from-bracket"></i> Çıkış Yap
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white pt-5 pb-3 mt-auto border-top border-secondary">
        <div class="container">
            <div class="row">

                <!-- 1. SÜTUN: Marka ve Kısa Bilgi -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="text-warning fw-bold mb-3">
                        <i class="fa-solid fa-dumbbell me-2"></i>GymApp
                    </h5>
                    <p class="small text-white-50" style="line-height: 1.6;">
                        Teknolojiyi sporla buluşturan yenilikçi yönetim platformu.
                        Yapay zeka destekli analizler ve kolay randevu sistemiyle hedeflerinize ulaşmanız artık çok daha kolay.
                    </p>
                </div>

                <!-- 2. SÜTUN: Hızlı Erişim Linkleri -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <h6 class="text-uppercase fw-bold mb-3 text-primary">Hızlı Erişim</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Index" class="text-white-50 text-decoration-none footer-link">
                                <i class="fa-solid fa-angle-right me-2 small text-warning"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none footer-link">
                                <i class="fa-solid fa-angle-right me-2 small text-warning"></i>Hakkımızda
                            </a>
                        </li>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="mb-2">
                                <a asp-controller="Account" asp-action="Login" class="text-white-50 text-decoration-none footer-link">
                                    <i class="fa-solid fa-angle-right me-2 small text-warning"></i>Giriş Yap
                                </a>
                            </li>
                            <li class="mb-2">
                                <a asp-controller="Account" asp-action="Register" class="text-white-50 text-decoration-none footer-link">
                                    <i class="fa-solid fa-angle-right me-2 small text-warning"></i>Kayıt Ol
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- 3. SÜTUN: İletişim ve Sosyal Medya -->
                <div class="col-lg-4 col-md-12 mb-4">
                    <h6 class="text-uppercase fw-bold mb-3 text-primary">İletişim & Takip</h6>
                    <ul class="list-unstyled small text-white-50 mb-4">
                        <li class="mb-2"><i class="fa-solid fa-location-dot me-2 text-warning"></i> Sakarya Üniversitesi Bilgisayar Ve Bilişim Bilimleri Fakültesi</li>
                        <li class="mb-2"><i class="fa-solid fa-envelope me-2 text-warning"></i> eyupmutluerol@gmail.com</li>
                        <li class="mb-2"><i class="fa-solid fa-phone me-2 text-warning"></i> +90 (546) 760 43 76</li>
                    </ul>

                    <!-- Sosyal Medya İkonları -->
                    <div class="d-flex gap-3">
                        <a href="#" class="social-btn btn btn-outline-light btn-sm rounded-circle"><i class="fa-brands fa-facebook-f"></i></a>
                        <a href="https://www.instagram.com/eyup.erll/" target="_blank" class="social-btn btn btn-outline-light btn-sm rounded-circle"><i class="fa-brands fa-instagram"></i></a>
                        <a href="#" class="social-btn btn btn-outline-light btn-sm rounded-circle"><i class="fa-brands fa-twitter"></i></a>
                        <a href="https://www.linkedin.com/in/eyüpmutluerol/" target="_blank" class="social-btn btn btn-outline-light btn-sm rounded-circle"><i class="fa-brands fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>

            <hr class="border-secondary my-4" />

            <!-- Alt Telif ve İmza Kısmı -->
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start small text-white-50">
                    &copy; @DateTime.Now.Year - <strong>Gym Yönetim Sistemi</strong> | Tüm Hakları Saklıdır.
                </div>
                <div class="col-md-6 text-center text-md-end small text-white-50 mt-2 mt-md-0">
                    Designed by <span class="text-warning">Eyüp Mutlu Erol</span>
                </div>
            </div>
        </div>
    </footer>

    <style>
        .footer-link {
            transition: all 0.3s ease;
            display: inline-block;
        }

            .footer-link:hover {
                color: #ffc107 !important; 
                padding-left: 8px; 
            }

        
        .social-btn {
            width: 38px;
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

            .social-btn:hover {
                background-color: #ffc107;
                border-color: #ffc107;
                color: #000;
                transform: translateY(-3px); 
            }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>