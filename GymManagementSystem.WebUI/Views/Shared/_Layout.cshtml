@using Microsoft.AspNetCore.Identity
@inject SignInManager<GymManagementSystem.Entities.Concrete.AppUser> SignInManager
@inject UserManager<GymManagementSystem.Entities.Concrete.AppUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gym Yönetim Sistemi</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome (İkonlar için) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-dumbbell text-warning"></i> GymApp
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            // Buraya ileride "Randevu Al", "Admin Paneli" gibi linkler gelecek
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Hakkımızda</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning fw-bold" asp-controller="Admin" asp-action="Index">
                                        <i class="fa-solid fa-gauge"></i> Panel
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Trainer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-info" asp-controller="Trainer" asp-action="Index">
                                        <i class="fa-solid fa-calendar-check"></i> Ders Programım
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Member"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Appointment" asp-action="Create">
                                        <i class="fa-solid fa-calendar-plus"></i> Randevu Al
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Appointment" asp-action="MyAppointments">
                                        <i class="fa-solid fa-calendar-check"></i> Randevularım
                                    </a>
                                </li>
                            }
                        }
                        
                    </ul>

                    <!-- SAĞ TARATAKİ KULLANICI MENÜSÜ -->
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var user = await UserManager.GetUserAsync(User);
                            var displayName = user != null ? user.FirstName : User.Identity.Name;

                            <li class="nav-item d-flex align-items-center">
                                <span class="text-white me-3">
                                    <i class="fa-solid fa-user-circle"></i> Merhaba, @displayName
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-sm" asp-controller="Account" asp-action="Logout">
                                    <i class="fa-solid fa-right-from-bracket"></i> Çıkış Yap
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <!-- Diğer sayfaların içeriği buraya gelecek -->
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-3 bg-light">
        <div class="container text-center">
            &copy; 2025 - Gym Yönetim Sistemi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>